<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_height="64dp"
        android:layout_width="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/avatar_1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="75dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        android:text="SnejUgal News"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSecondary"
        />

    <ImageView
        android:id="@+id/verifiedIcon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@id/title"
        android:src="@drawable/verified_icon"
        />

    <ImageView
        android:id="@+id/muteIcon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@id/verifiedIcon"
        android:src="@drawable/mute_icon"
        />

    <ImageView
        android:id="@+id/scamPatch"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@id/muteIcon"
        android:src="@drawable/scam_patch"
        />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#FF434449"
        android:textSize="14sp"
        android:visibility="visible"
        android:text="Nikolay"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/title"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="author"
        />

    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/check_icon"
        android:visibility="invisible"
        android:layout_marginEnd="1dp"
        />

    <ImageView
        android:id="@+id/readIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/read_icon"
        android:visibility="invisible"
        android:layout_marginEnd="1dp"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF95999A"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="00:00" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_goneMarginStart="0dp"
        android:layout_marginTop="4dp"
        android:textColor="#FF8D8E90"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/author"
        android:text="Yes, they are necessary" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/counter"
        android:text="1"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:backgroundTint="#3D95D4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>